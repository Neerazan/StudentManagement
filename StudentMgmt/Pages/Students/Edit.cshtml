@page "{id:int}"
@model StudentMgmt.Pages.Students.EditModel
@{

}
<form method="POST">
    <input type="hidden" asp-for="Student.Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Student.Name" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Student.Name">
        <span asp-validation-for="Student.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Student.Email" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Student.Email">
        <span asp-validation-for="Student.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Student.Phone" class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Student.Phone">
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" asp-for="Student.Gender" value="Male">
        <label class="form-check-label" for="male">
            Male
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" id="female" asp-for="Student.Gender" value="Female">
        <label class="form-check-label" for="female">
            Female
        </label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" id="other" asp-for="Student.Gender" value="Other">
        <label class="form-check-label" for="other">
            Other
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
